{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2016",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/database/*": ["./src/database/*"],
      "@/routes/*": ["./src/routes/*"],
      "@/constants/*": ["./src/constants/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
